<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Michal Kurek Solution</title>
  <!-- @include 'styles.kit' -->
</head>

<body>

  <!-- @include 'nav.kit' -->

  <section class="hero">
    <div class="hero__image"></div>
    <h1>Currency Converter</h1>
  </section>

  <main class="main">
    <section class=" calculator">
      <div class="calculator__background"></div>

      <!-- UNITED KINGDOM BOX -->
      <div class="calculator__input-text">
        <p>You send</p>
      </div>
      <div class="calculator__input-Box">
        <img src="./dist/img/united-kingdom-flag-icon.svg" alt="united kingdom flag small icon">
        <div>
          <input class="calculator__input-value" type="text" id="en">
        </div>
        <div class="calculator__currency">
          <p>GBP</p>
        </div>
      </div>

      <!-- POLAND BOX -->
      <div class="calculator__input-text">
        <p>They receive</p>
      </div>
      <div class="calculator__input-Box">
        <img src="./dist/img/poland-flag-icon.svg" alt="Poland flag small icon">
        <div>
          <input class="calculator__input-value" type="text" id="pl">
        </div>
        <div class="calculator__currency">
          <p>PLN</p>
        </div>
      </div>

      <!-- INFO -->
      <div class="calculator__exchange-rate">
        <p>1 GBP = <span class="exchange-rate"></span></p>
        <p><strong>No transfer fee</strong></p>
      </div>

      </div>

    </section>
  </main>

  <!-- @include 'footer.kit' -->

  <script src="./dist/js/main.min.js"></script>
  <script src="./dist/js/navigation.min.js"></script>
  <script src="https://kit.fontawesome.com/6f008fc73a.js" crossorigin="anonymous"></script>
</body>

</html>